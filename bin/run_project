#!/bin/bash

# The path that is executed to this file
BINPATH=`dirname $0`
# The path where the execution takes place
PREFIX=`pwd`
# Stripping leading ./
BINPATH=`python -c "print '' if '$BINPATH'=='.' else '$BINPATH'.split('/', 1)[1]"`
WHOLEPATH=$PREFIX/$BINPATH
# Stripping tailing /bin
WHOLEPATH=`python -c "print '$WHOLEPATH'.split('/bin')[0]"`
# Adding ../project abspath to pythonpath
export PYTHONPATH=$WHOLEPATH
# $@ passes all the args that were received
python -m project $@
